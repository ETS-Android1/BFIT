<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPrimary"
    tools:context=".MainActivity">





    <ImageView
        android:id="@+id/headerImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/butt" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"

        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="VectorDrawableCompat" />


    <ProgressBar
        android:id="@+id/workoutProgressBar"
        android:layout_below="@+id/backIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyProgressBar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minWidth="100dp"
        android:progressTint="@color/colorAccent"
        android:progress="10"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REST"
            android:textSize="20dp"
            android:fontFamily="@font/futura_book"
            android:textColor="@android:color/white"
            />


        <TextView
            android:id="@+id/restTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textSize="80dp"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/colorAccent"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:fontFamily="@font/futura_heavy"
            android:textColor="#80FFFFFF"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="7dp">

            <ImageView
                android:id="@+id/imgNextWorkout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dayheader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/arrowLeft"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgNextWorkout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNextWorkoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/futura_book"
                    android:text="TITLE"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNextWorkoutRep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/futura_heavy"
                    android:text="X 18"
                    android:textColor="#80FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/arrowLeft"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_keyboard_arrow_right"
                android:tint="@android:color/white" />

        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        >



        <Button
            android:id="@+id/addTimeBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="+30 s"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorTransparent"
            />



        <Button
            android:id="@+id/skipBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="SKIP"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            />


    </LinearLayout>



</RelativeLayout>