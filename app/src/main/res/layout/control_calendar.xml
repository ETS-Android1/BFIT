<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"

        >

        <ImageView
            android:id="@+id/prevBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:tint="@android:color/white"
            android:src="@drawable/ic_keyboard_arrow_left"

            />

        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right"

            />

        <TextView
            android:id="@+id/calDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="September 2019"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="@font/futura_book"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/prevBtn"
            android:layout_toLeftOf="@+id/nextBtn"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80000000"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:weightSum="7"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="S"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="M"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="T"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="W"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="T"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="F"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="S"
            android:fontFamily="@font/futura_heavy"
            android:textColor="@color/halfWhite"
            android:layout_weight="1"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7"
        ></GridView>

</LinearLayout>