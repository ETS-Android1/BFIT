<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/outerView"
    android:background="#171717"
    android:orientation="vertical"
    android:padding="7dp">

    <ImageView
        android:id="@+id/workoutImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dayheader" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/arrowLeft"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/workoutImg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/futura_book"
            android:text="TITLE"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workOutRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/futura_heavy"
            android:text="X 18"
            android:textColor="#80FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_keyboard_arrow_right"
        android:tint="@android:color/white" />

</RelativeLayout>