<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPrimary"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/butt" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/futura_heavy"
            android:text="BFIT"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_settings"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:weightSum="3"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/lvlEasy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:elevation="7dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/butt" />

            <ImageView
                android:id="@+id/icBronze"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_bronze"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/icBronze"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/futura_heavy"
                    android:text="EASY"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/levelProgressEasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyProgressBar"
                    android:minWidth="100dp"
                    android:progressTint="@color/colorAccent"
                    android:progress="10"
                    />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lvlMedium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:elevation="7dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorTransparent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/butt" />

            <ImageView
                android:id="@+id/icSilver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_silver"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/icSilver"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/futura_heavy"
                    android:text="MEDIUM"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/levelProgressMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyProgressBar"
                    android:minWidth="100dp"
                    android:progressTint="@color/colorAccent"
                    android:progress="30"
                    />

            </LinearLayout>


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/lvlHard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorTransparent"
            android:elevation="7dp"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/butt" />

            <ImageView
                android:id="@+id/icGold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_gold"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/icGold"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/futura_heavy"
                    android:text="HARD"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/levelProgressHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyProgressBar"
                    android:minWidth="100dp"
                    android:progressTint="@color/colorAccent"
                    android:progress="10"
                    />

            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>