<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPrimary"
    tools:context=".MainActivity">





    <ImageView
        android:id="@+id/headerImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"

        android:tint="@color/black"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOW DO YOU FEEL?"
        android:layout_margin="20dp"
        android:textSize="40dp"
        android:fontFamily="@font/futura_heavy"
        android:layout_below="@+id/backIcon"
        android:textColor="@color/black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/fdbEasyBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="EASY"
            android:textAllCaps="true"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_greybtn"
            />

        <Button
            android:id="@+id/fdbOkayBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="OKAY"
            android:textAllCaps="true"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_greybtn"
            />


        <Button
            android:id="@+id/fdbHardBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="HARD"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_greybtn"
            />


    </LinearLayout>





</RelativeLayout>